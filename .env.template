# GitHub Configuration (optional)
# Set SYNC_TO_GITHUB=true to enable automatic GitHub synchronization
SYNC_TO_GITHUB=false
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=username/repository

# Logging Configuration
# Set to any value to enable debug logging to console (default: disabled)
# BOOKCHAT_DEBUG=true

# Server Configuration
PORT=8000

# Key Management (optional)
# Directory to store keys (default: repo/keys)
KEYS_DIR=/path/to/keys
# Whether to sign messages by default (true/false)
SIGN_MESSAGES=true

# Enable message verification system (true/false)
MESSAGE_VERIFICATION=false

# Archive settings
ARCHIVE_INTERVAL_SECONDS=3600
ARCHIVE_DAYS_THRESHOLD=30
ARCHIVE_MAX_SIZE_MB=100
